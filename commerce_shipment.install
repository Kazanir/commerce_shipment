  );

  // Commerce Shipment Tracking Number field instance.
  $fields['field_instance']['commerce_shipment_tracking_num'] = array(
    'bundle' => 'shipment',
    'default_value' => NULL,
    'deleted' => 0,
    'description' => '',
    'display' => array(
